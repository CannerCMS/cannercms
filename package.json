{
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "jest --coverage --verbose false --maxWorkers=2",
    "test:watch": "jest --watch --verbose false",
    "lint": "eslint ./packages/*/src/**/*.js",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna exec --parallel -- rimraf lib dist",
    "build:flow": "lerna exec --parallel --ignore *graphql* -- flow-copy-source -v -i '**/test/**' src lib",
    "build:watch": "gulp watch",
    "build:ts": "gulp ts",
    "build:js": "gulp js",
    "build": "gulp",
    "prepublishOnly": "npm run clean && npm run check:src && npm run build && npm run build:flow",
    "release": "npm run clean && npm run build && lerna publish --exact",
    "release:next": "npm run clean && npm run build && lerna publish --exact --npm-tag next",
    "check:src": "npm run lint",
    "start": "webpack-dev-server --mode development",
    "build:docs": "rm -rf docs/dist && webpack --mode production",
    "gh-pages": "gh-pages -d docs/dist",
    "deploy": "npm run build:docs && npm run gh-pages",
    "validate": "npm ls"
  },
  "devDependencies": {
